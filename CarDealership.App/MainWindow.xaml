        Title="TrueSlavs ||| Car Dealership" Height="358.103" Width="852.914">
    <Grid Margin="0,0,3.4,0.4">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="42,25,43.4,0" Text="Welcome to the TrueSlavs ||| Car Catalog" VerticalAlignment="Top" Height="27" Width="433" FontFamily="Copperplate Gothic Light" RenderTransformOrigin="0.501,0.613" FontSize="18" TextWrapping="Wrap" TextAlignment="Center"/>
